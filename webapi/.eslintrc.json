{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "jest": true,
        "node": true
    },
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "extends": ["google"],
    "parser": "@typescript-eslint/parser",
    "rules": {
        "max-len": [
            "error",
            {
                "code": 200
            }
        ],
        "quotes": ["error", "double"],
        "require-jsdoc": 0,
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "@typescript-eslint/no-var-requires": 1,
        "prefer-template": 1,
        "prefer-const": 0,
        "camelcase": "off",
        "object-curly-spacing": ["error", "always"],
        "no-unused-vars": 0,
        "valid-jsdoc": 0,
        "no-undef": 1,
        "new-cap": 0,
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "always",
                "named": "never",
                "asyncArrow": "always"
            }
        ]
    },

    "plugins": ["@typescript-eslint"]
}
